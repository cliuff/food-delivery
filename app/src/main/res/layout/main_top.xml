<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/mainTopContainer"
    android:background="@drawable/main_top_back"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:drawableStart="@drawable/ic_room_24"
        android:drawableTint="?mColorBackground"
        android:drawablePadding="8dp"
        android:text="重庆理工大学两江校区"
        android:textColor="?mColorBackground"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:drawableStart="@drawable/ic_search_24"
        android:drawablePadding="18dp"
        android:hint="搜索商家名称、商品名称"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/main_search_back"
        android:backgroundTint="?mColorBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
