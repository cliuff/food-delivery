<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/moreProfileBack"
            android:background="@drawable/main_top_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/moreProfilePhoto"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/moreProfileUserName"
                android:text="一切已就绪"
                android:textColor="?mColorBackground"
                android:textSize="20sp"
                android:padding="4dp"
                android:textStyle="bold"
                android:layout_marginStart="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/moreProfilePhotoMobile"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/moreProfilePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/moreProfilePhotoMobile"
                android:text="132****4176"
                android:textColor="?mColorBackground"
                android:drawableStart="@drawable/ic_smartphone_24"
                android:drawableTint="?mColorBackground"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:layout_marginStart="18dp"
                app:layout_constraintTop_toBottomOf="@id/moreProfileUserName"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/moreProfilePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/ic_arrow_forward_24"
                android:tint="?mColorBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:adjustViewBounds="true"
                android:layout_marginEnd="10dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:background="?mColorSurface"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="99"
                    android:textColor="#FFF03030"
                    android:textSize="24sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="红包"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="1024"
                    android:textColor="#FF3030F0"
                    android:textSize="24sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="金币"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:text="我的地址"
            android:drawableStart="@drawable/ic_room_24"
            android:layout_marginTop="1dp"
            style="@style/AppTheme.SimpleOption"/>

        <TextView
            android:text="金币商城"
            android:drawableStart="@drawable/ic_monetization_on_24"
            android:layout_marginTop="12dp"
            style="@style/AppTheme.SimpleOption"/>

        <TextView
            android:text="我的客服"
            android:drawableStart="@drawable/ic_headset_mic_24"
            android:layout_marginTop="12dp"
            style="@style/AppTheme.SimpleOption"/>

        <TextView
            android:text="我的钱包"
            android:drawableStart="@drawable/ic_account_balance_wallet_24"
            android:layout_marginTop="12dp"
            style="@style/AppTheme.SimpleOption"/>

        <TextView
            android:text="规则中心"
            android:drawableStart="@drawable/ic_description_24"
            style="@style/AppTheme.SimpleOption"/>
    </LinearLayout>
</layout>
